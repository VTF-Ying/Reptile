<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reptile.mapper.BookMapper">
    <resultMap id="BaseResultMap" type="com.reptile.entity.Book">
        <id column="book_id" property="bookId"/>
        <result column="book_name" property="bookName"/>
        <result column="book_url" property="bookUrl"/>
        <result column="book_author" property="bookAuthor"/>
        <result column="book_type" property="bookType"/>
        <result column="book_data" jdbcType="BIGINT" property="bookData"/>
        <result column="book_update_date" jdbcType="VARCHAR" property="bookUpdateDate"/>
    </resultMap>

    <insert id="saveBooks" >
        insert into index_book (book_id,book_name,book_url,book_author,book_type,book_update_date,enabled_flag) values <foreach collection="set" item="item" index="index" separator="," >(#{item.bookId},#{item.bookName},#{item.bookUrl},#{item.bookAuthor},#{item.bookType},#{item.bookUpdateDate},'1')</foreach>
    </insert>

    <select id="getAllBook" resultMap="BaseResultMap">
        select * from index_book where enabled_flag=1
    </select>

    <select id="getBookById" resultMap="BaseResultMap" parameterType="com.reptile.entity.Book">
        select * from index_book where enabled_flag=1
        <if test="bookId != null">
            and book_id=#{bookId};
        </if>
    </select>

    <select id="getBookByName" resultMap="BaseResultMap" parameterType="com.reptile.entity.Book">
        select * from index_book where enabled_flag=1
        <if test="bookName != null and bookName != ''" >
            and book_name=#{bookName};
        </if>
    </select>

    
</mapper>